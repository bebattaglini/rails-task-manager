<h1><%= @task.title %></h1>
<p class="details"><%= @task.details %></p>

<h3>
<%if @task.completed  %>
<%= "✔️ This task is completed" %>
<% else %>
<%= "✖️ This task is not completed yet" %>
<% end %>
</h3>

<%= link_to tasks_path do %>
<p>Back to list</p>
<% end %>
<%= link_to edit_task_path(@task) do %>
<p>Edit this task</p>
<% end %>

<%= link_to "", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "fa fa-trash" %>
