<h1>My tasks:</h1>
<%@tasks.each do |task|%>
<div class="information">
<h3>
<%if task.completed  %>
<%= "✔️" %>
<% else %>
<%= "✖️" %>
<% end %>
</h3>
<h2>
 <%= link_to task.title, task_path(task) %>
</h2>
</div>
<% end %>
<div class="adding">
  <%= link_to "Add a new task", tasks_new_path %>
</div>


